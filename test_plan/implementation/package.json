{
  "name": "supplier-crud-test-implementation",
  "version": "1.0.0",
  "description": "Comprehensive test implementation for supplier CRUD operations",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:manual": "node manual/test-runner.js",
    "test:performance": "node performance/performance-runner.js",
    "test:security": "node security/security-runner.js",
    "test:all": "npm run test && npm run test:performance && npm run test:security",
    "generate-data": "node data/generate-test-data.js",
    "clean-data": "node data/clean-test-data.js",
    "report": "node reports/generate-report.js"
  },
  "dependencies": {
    "puppeteer": "^21.0.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^9.0.0",
    "axios": "^1.5.0",
    "faker": "^6.6.6",
    "lighthouse": "^11.0.0",
    "autocannon": "^7.12.0",
    "csv-writer": "^1.6.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/puppeteer": "^7.0.4"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "testMatch": ["**/automated/**/*.test.js"],
    "collectCoverageFrom": [
      "automated/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}